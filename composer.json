{
    "name": "julien-boudry/condorcet",
    "license": "MIT",
    "type": "library",
    "homepage": "https://github.com/julien-boudry/Condorcet",
    "description": "Complete election manager, providing natively many voting methods including: Condorcet / Borda (+ Nauru variant) / Copeland / Dodgson (2 Approximations) / FTPT / Instant-runoff (alternative vote) / Kemenyâ€“Young / Minimax (+ variants) / Ranked Pairs (+ variants) / Schulze (+ variants), Single Transferable Vote (STV) / Comparison of Pairs of Outcomes by the Single Transferable Vote (CPO-STV)",
    "keywords": ["election", "vote", "condorcet", "schulze", "tideman", "ranked pairs", "borda", "copeland", "alternative vote", "STV"],
    "authors": [
        {
            "name": "Julien Boudry",
            "email": "julien.boudry@gmail.com",
            "homepage": "https://artisanat-furieux.net/",
            "role": "Developer"
        }
    ],
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/julien-boudry"
        },
        {
            "type": "bitcoin",
            "url": "https://blockchair.com/bitcoin/address/bc1q3jllk3qd9fjvvuqy07tawkv7t6h7qjf55fc2gh"
        }
    ],
    "require": {
        "php": "^8.4",
        "ext-json": "*",
        "ext-mbstring": "*",
        "symfony/console": "^7.2",
        "symfony/yaml": "^7.2",
        "brick/math": "^0.14"
    },
    "require-dev": {
        "ext-pdo": "*",
        "ext-pdo_sqlite": "*",
        "phpbench/phpbench": "^1.4",
        "haydenpierce/class-finder": ">= 0.5.3",
        "phpstan/phpstan": "^2.1",
        "pestphp/pest": "^4.1",
        "phpstan/phpdoc-parser": "^2.3",
        "rector/rector": "^2.2",
        "laravel/prompts": "^0.3",
        "friendsofphp/php-cs-fixer": "^3.89"
    },
    "suggest": {
        "ext-pdo": "Allow to use database for very large elections.",
        "ext-pdo_sqlite": "Use sqlite3 bases for very large elections."
    },
    "autoload": {
        "psr-4": {
            "CondorcetPHP\\Condorcet\\": "src/",
            "CondorcetPHP\\Condorcet\\Dev\\CondorcetDocumentationGenerator\\": "Dev/CondorcetDocumentationGenerator/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "CondorcetPHP\\Condorcet\\Benchmarks\\": "Benchmarks"
        }
    },
    "scripts": {
        "test": "pest",
        "document": "php Dev/update-documentation.php",
        "lint": "php-cs-fixer fix",
        "pintify": "@lint",
        "phpstan": "phpstan analyse --no-interaction",
        "rector": "rector process --dry-run"
    },
    "scripts-descriptions": {
        "test": "Run all tests!",
        "document": "Generate documentation",
        "pintify": "Run laravel Pint",
        "phpstan": "Run PHPStan",
        "rector": "Run rector"
    },
    "bin": ["bin/condorcet"],
    "archive": {
        "exclude": [
            "/Assets",
            "/Benchmarks",
            "/Docs",
            "/Examples",
            "/tests",
            "*.dist"
        ]
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
